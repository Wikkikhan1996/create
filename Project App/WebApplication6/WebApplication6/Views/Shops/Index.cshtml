@model IEnumerable<WebApplication6.Models.Shop>

@{
    ViewBag.Title = "Index";
}

<h2 style="font-style:italic; font-family:'Mesquite Std'; font-size:90px;">SHOP DETAILS</h2>

<div>
    <img src="~/Upload/banner5.jpg" />


</div>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-condensed table-hover a-grid1-icon" style="font-family:Algerian;border:outset;color:green; font:bolder">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Shops_Categary.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shops_Categary.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>

